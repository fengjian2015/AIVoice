<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/gray_99"
        />

    <EditText
        android:id="@+id/et_register_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="请输入用户名"
        android:textColorHint="@color/gray_e2"
        android:textSize="@dimen/font_size_14"
        android:background="@null"
        android:inputType="phone"
        android:textColor="@color/black_33"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_divide_main"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/gray_99"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入邮箱"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/gray_e2"
        android:textSize="@dimen/font_size_16"
        android:inputType="textPassword"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/gray_99"
        android:text="手机号"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <TextView
            android:id="@+id/tv_login_register_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <EditText
            android:id="@+id/et_register_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:hint="请输入手机号"
            android:textColorHint="@color/gray_e2"
            android:textSize="@dimen/font_size_14"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/black_33"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_divide_main"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            />

        <TextView
            android:layout_width="45dp"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/gray_99"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入密码"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/gray_e2"
        android:textSize="@dimen/font_size_16"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/btn_corner_blue_blue"
        android:layout_marginTop="45dp"
        android:text="注册"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_register_pwd_find_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:textColor="@color/blue_main"
            android:padding="10dp"
            />

    </RelativeLayout>



</LinearLayout>