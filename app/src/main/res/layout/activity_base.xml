<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_base_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:src="@drawable/nav_back" />

        <TextView
            android:id="@+id/tv_base_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_00"
            android:textSize="@dimen/font_size_16" />
        
        <ImageView
            android:id="@+id/iv_base_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_base_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/blue_main"
            android:textSize="@dimen/font_size_17"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_base_title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_divide_title"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/vf_base_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ViewFlipper>


</LinearLayout>